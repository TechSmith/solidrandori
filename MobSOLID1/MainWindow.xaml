<Window x:Class="MobSOLID1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MobSOLID1"
        mc:Ignorable="d"
        Title="Video Production" Height="240" Width="360">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="60,17,0,0" TextWrapping="Wrap" Text="Output type:" VerticalAlignment="Top" Width="232"/>
        <ComboBox x:Name="VideoOutputSelection" HorizontalAlignment="Left" Margin="60,38,0,0" VerticalAlignment="Top" Width="232" SelectionChanged="VideoOutputSelection_SelectionChanged">
            <ComboBoxItem Content="MP4" HorizontalAlignment="Left" Width="230"/>
            <ComboBoxItem Content="AVI" HorizontalAlignment="Left" Width="230"/>
            <ComboBoxItem Content="MP3" HorizontalAlignment="Left" Width="230"/>
        </ComboBox>
        <Button Margin="60,130,60,40" Click="Produce_Click">Produce</Button>
    </Grid>
</Window>
